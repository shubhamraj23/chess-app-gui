{
  "name": "chess-app-gui",
  "version": "1.0.0",
  "description": "A web socket based chess application",
  "main": "backend/src/index.js",
  "scripts": {
    "start": "node backend/src/index.js",
    "build:css": "tailwindcss -i ./frontend/src/input.css -o ./frontend/src/styles.css --watch",
    "client": "npm start --prefix frontend",
    "server": "nodemon backend/src/index.js",
    "frontend": "concurrently \"npm run build:css\" \"npm run client\"",
    "jest:watch": "jest --watchAll",
    "test": "npm run jest:watch",
    "backend": "concurrently \"npm run server\" \"npm run test\"",
    "dev": "concurrently \"npm run frontend\" \"npm run backend\""
  },
  "jest": {
    "testEnvironment": "node",
    "setupFiles": [
      "./backend/tests/testSetup.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shubhamraj23/chess-app-gui.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/shubhamraj23/chess-app-gui/issues"
  },
  "homepage": "https://github.com/shubhamraj23/chess-app-gui#readme",
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.3.3"
  }
}
